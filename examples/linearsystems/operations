package operations_example

import "ann/linearsystems"

func main() {
	input := [linearsystems.SIZE1 * linearsystems.SIZE2]float64{
		7, -2, 2, -5,
		8, 6, -8, 6, 
		5, 8, 6, 6, 
		-2, -3, 4, 4,
	}

	matrix := linearsystems.CreateMatrix(input)
	
	op1 := linearsystems.AddLineElements(matrix, 2, 1)

	op2 := linearsystems.AddLineWeightedElements(op1, 3, 1, 3.0)

	op3 := linearsystems.AddLineWeightedElements(op2, 3, 2, 0.5)

	linearsystems.FormatMatrixResult(op3)

}
